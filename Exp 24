#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
int main() {
    int fd = open("example.txt", O_CREAT | O_WRONLY, 0644);
    if (fd < 0) {
        perror("Open");
        return 1;
    }
    write(fd, "Hello, Unix File!", 17);
    close(fd);
    fd = open("example.txt", O_RDONLY);
    char buffer[100];
    read(fd, buffer, sizeof(buffer));
    printf("File Content: %s\n", buffer);
    close(fd);
    return 0;
}
