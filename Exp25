#include <stdio.h>
#include <fcntl.h>
#include <sys/stat.h>
#include <dirent.h>
#include <unistd.h>
int main() {
    int fd = open("example.txt", O_RDWR);
    if (fd < 0) return 1;
    fcntl(fd, F_SETFL, O_NONBLOCK);
    lseek(fd, 0, SEEK_SET);
    struct stat info;
    stat("example.txt", &info);
    printf("File Size: %ld bytes\n", info.st_size);
    close(fd);
    DIR *d;
    struct dirent *dir;
    d = opendir(".");
    if (d) {
        printf("Directory listing:\n");
        while ((dir = readdir(d)) != NULL)
            printf("%s\n", dir->d_name);
        closedir(d);
    }
    return 0;
}
